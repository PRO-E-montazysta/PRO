<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.tool.ToolFragment"
    android:padding="8dp"
    android:layout_marginTop="@dimen/activity_vertical_margin">
    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_tool"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

<LinearLayout
    android:id="@+id/tool_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/view_name"
    >
    <TextView
        android:id="@+id/tool_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nazwa"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tool_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kod"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tool_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jednostka"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tool_quantity_of_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ilość w jednostce"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>


    <LinearLayout
        android:id="@+id/tool_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <Button
            android:id="@+id/tool_event"
            android:enabled="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Utwórz zdarzenie narzędzia" />
        <Button
            android:id="@+id/tool_order"
            android:enabled="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dodaj do etapu zlecenia" >
        </Button>

        <Button
            android:id="@+id/tool_manage"
            android:enabled="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wydaj/zwróć narzędzie"
            android:drawableLeft="@drawable/baseline_add_box_24"/>
        <Button
            android:id="@+id/tool_warehouse"
            android:enabled="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tool_warehouse_button" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>