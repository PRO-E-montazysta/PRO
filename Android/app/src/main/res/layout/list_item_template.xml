<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="headline"
            type="java.lang.String" />
        <variable
            name="supportText"
            type="java.lang.String" />
    </data>

    <merge
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:backgroundTint="?colorSurface"
        android:clickable="true"
        android:focusable="true"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
        tools:theme="@style/Theme.EMontaÅ¼ysta">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_start"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_begin="@dimen/list_item_space_x4"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_end"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_end="@dimen/list_item_space_x6"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_top"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_begin="@dimen/list_item_space_x3"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_end="-58dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_icon_start"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:barrierAllowsGoneWidgets="true"
            app:barrierDirection="end"
            app:constraint_referenced_ids="guide_start" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_text_end"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:barrierAllowsGoneWidgets="false"
            app:barrierDirection="start"
            app:constraint_referenced_ids="guide_end" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_text_start"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:barrierAllowsGoneWidgets="false"
            app:barrierDirection="end"
            app:constraint_referenced_ids="leading_icon" />

        <ImageView
            android:id="@+id/leading_icon"
            android:layout_height="44dp"
            android:layout_width="44dp"
            app:layout_constraintStart_toEndOf="@id/barrier_icon_start"
            app:layout_constraintTop_toTopOf="@id/guide_top"
            app:layout_constraintBottom_toBottomOf="@id/guide_bottom"
            android:src="@drawable/baseline_tools_24"

            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?textAppearanceBodyLarge"
            android:textColor="?colorOnSurface"
            app:firstBaselineToTopHeight="@dimen/list_item_headline_first_baseline_to_top"
            app:lastBaselineToBottomHeight="@dimen/list_item_headline_last_baseline_to_bottom"
            app:layout_constraintBottom_toTopOf="@+id/txt_support"
            app:layout_constraintEnd_toStartOf="@id/barrier_text_end"
            app:layout_constraintStart_toEndOf="@+id/leading_icon"
            app:layout_constraintTop_toTopOf="@id/guide_top"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text='@{headline}' />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_support"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="8"
            android:textAppearance="?textAppearanceBodyMedium"
            android:textColor="?colorOnSurfaceVariant"
            app:firstBaselineToTopHeight="@dimen/list_item_supporting_text_first_baseline_to_top"
            app:lastBaselineToBottomHeight="@dimen/list_item_supporting_text_last_baseline_to_bottom"
            app:layout_constraintBottom_toTopOf="@+id/guide_bottom"
            app:layout_constraintEnd_toEndOf="@id/barrier_text_end"
            app:layout_constraintStart_toEndOf="@+id/leading_icon"
            app:layout_constraintTop_toBottomOf="@id/txt_headline"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text='@{supportText}' />
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/list_item_space_x3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_support"/>
    </merge>
</layout>