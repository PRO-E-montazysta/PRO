<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="user"
            type="com.example.e_montazysta.ui.user.UserListItem" />
        <variable
            name="itemClickListener"
            type="com.example.e_montazysta.ui.user.UserListAdapter.CustomClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:backgroundTint="?colorSurface"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="@dimen/list_item_min_height_two_line"
        tools:theme="@style/Theme.Material3.DayNight"
        android:onClick="@{() -> itemClickListener.cardClicked(user)}"
        >

        <include layout="@layout/list_item_template"
            android:id="@+id/item"
            app:headline="@{user.name}"
            app:supportText='@{user.getItemInfo()}'
            app:icon='@drawable/baseline_arrow_left_alt_24'
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@id/leading_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/leading_icon"
            app:layout_constraintBottom_toBottomOf="@id/leading_icon"
            >
        </include>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
