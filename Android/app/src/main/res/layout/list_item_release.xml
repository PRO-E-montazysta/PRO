<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="release"
            type="com.example.e_montazysta.ui.release.ReleaseListItem" />
        <variable
            name="itemClickListener"
            type="com.example.e_montazysta.ui.release.CustomClickListener" />
    </data>


    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Material3.CardView.Elevated"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:onClick="@{() -> itemClickListener.cardClicked(release)}"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            >


            <TextView
                android:id="@+id/releaseId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="@{release.id}" />

            <TextView
                android:id="@+id/toolType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="@{release.type}" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha=".30"
                android:background="?colorOnPrimaryContainer"
                android:orientation="vertical"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>