<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="0dp"
                app:layout_scrollEffect="compress"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:menu="@menu/menu_details"
                app:navigationIcon="@drawable/baseline_arrow_back_24"
                app:title="@string/user_details_title" />
        </com.google.android.material.appbar.AppBarLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/list_item_space_x3"
                    android:paddingStart="@dimen/list_item_space_x4"
                    android:paddingEnd="@dimen/list_item_space_x6">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/userFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/user_first_name"
                        android:textAppearance="?textAppearanceBodySmall"
                        android:textColor="?colorOnSurfaceVariant" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/userFirstNameValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Brak"
                        android:textAppearance="?textAppearanceBodyLarge"
                        android:textColor="?colorOnSurface" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/list_item_space_x3"
                    android:paddingStart="@dimen/list_item_space_x4"
                    android:paddingEnd="@dimen/list_item_space_x6">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/userLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text='Nazwisko'
                        android:textAppearance="?textAppearanceBodySmall"
                        android:textColor="?colorOnSurfaceVariant" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/userLastNameValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Brak"
                        android:textAppearance="?textAppearanceBodyLarge" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/list_item_space_x3"
                    android:paddingStart="@dimen/list_item_space_x4"
                    android:paddingEnd="@dimen/list_item_space_x6">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/userRole"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text='Stanowisko'
                        android:textAppearance="?textAppearanceBodySmall"
                        android:textColor="?colorOnSurfaceVariant" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/userRoleValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Brak"
                        android:textAppearance="?textAppearanceBodyLarge"
                        android:textColor="?colorOnSurface" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/list_item_space_x3"
                    android:paddingStart="@dimen/list_item_space_x4"
                    android:paddingEnd="@dimen/list_item_space_x6">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/userEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text='Email'
                        android:textAppearance="?textAppearanceBodySmall"
                        android:textColor="?colorOnSurfaceVariant" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/userEmailValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Brak"
                        android:textAppearance="?textAppearanceBodyLarge"
                        android:textColor="?colorOnSurface" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/list_item_space_x3"
                    android:paddingStart="@dimen/list_item_space_x4"
                    android:paddingEnd="@dimen/list_item_space_x6">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/userPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text='Telefon'
                        android:textAppearance="?textAppearanceBodySmall"
                        android:textColor="?colorOnSurfaceVariant" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/userPhoneValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Brak"
                        android:textAppearance="?textAppearanceBodyLarge"
                        android:textColor="?colorOnSurface" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/list_item_space_x3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/guide_end"
                    app:layout_constraintStart_toStartOf="@id/guide_start" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>